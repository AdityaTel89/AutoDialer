<div class="container mx-auto px-4 py-8">
  <h1 class="text-4xl font-bold mb-8">ü§ñ Autodialer Dashboard</h1>
  
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
    <div class="bg-white p-6 rounded-lg shadow">
      <h3 class="text-gray-500 text-sm font-semibold">Total Calls</h3>
      <p class="text-3xl font-bold"><%= @stats[:total] %></p>
    </div>
    <div class="bg-green-100 p-6 rounded-lg shadow">
      <h3 class="text-gray-500 text-sm font-semibold">Completed</h3>
      <p class="text-3xl font-bold text-green-600"><%= @stats[:completed] %></p>
    </div>
    <div class="bg-red-100 p-6 rounded-lg shadow">
      <h3 class="text-gray-500 text-sm font-semibold">Failed</h3>
      <p class="text-3xl font-bold text-red-600"><%= @stats[:failed] %></p>
    </div>
    <div class="bg-blue-100 p-6 rounded-lg shadow">
      <h3 class="text-gray-500 text-sm font-semibold">In Progress</h3>
      <p class="text-3xl font-bold text-blue-600"><%= @stats[:in_progress] %></p>
    </div>
  </div>
  
  <!-- AI Prompt Input -->
  <div class="bg-white p-6 rounded-lg shadow mb-8">
    <h2 class="text-2xl font-bold mb-4">üìù AI Voice Prompt</h2>
    <textarea id="ai-prompt" class="w-full p-3 border rounded focus:ring-2 focus:ring-blue-500" rows="3" 
      placeholder="Enter the message to be spoken during the call">Hello, this is an automated call from our service. How are you today?</textarea>
    <p class="text-sm text-gray-600 mt-2">This message will be spoken by Twilio's AI voice during the call</p>
  </div>
  
  <!-- Single Call -->
  <div class="bg-white p-6 rounded-lg shadow mb-8">
    <h2 class="text-2xl font-bold mb-4">‚òéÔ∏è Make Single Call</h2>
    <div class="flex gap-4">
      <input type="text" id="single-number" class="flex-1 p-3 border rounded focus:ring-2 focus:ring-blue-500" 
             placeholder="+919876543210 (your verified number)">
      <button onclick="makeSingleCall()" class="bg-blue-500 text-white px-6 py-3 rounded hover:bg-blue-600 transition">
        üìû Call Now
      </button>
    </div>
    <p class="text-sm text-yellow-600 mt-2 bg-yellow-50 p-2 rounded">
      ‚ö†Ô∏è <strong>Trial Account:</strong> Only verified phone numbers can be called. Verify numbers in your Twilio Console.
    </p>
  </div>
  
  <!-- Bulk Upload -->
  <div class="bg-white p-6 rounded-lg shadow mb-8">
    <h2 class="text-2xl font-bold mb-4">üì§ Bulk Upload Numbers</h2>
    
    <!-- File Upload -->
    <div class="mb-6 border-b pb-6">
      <h3 class="font-semibold mb-3 text-lg">üìÅ Upload CSV/TXT File</h3>
      <%= form_with url: dashboard_upload_path, multipart: true, class: "space-y-4" do |f| %>
        <%= f.hidden_field :ai_prompt, id: "upload-ai-prompt" %>
        <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 hover:border-blue-400 transition">
          <%= f.file_field :file, accept: ".csv,.txt", class: "mb-4 file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100" %>
          <p class="text-sm text-gray-600 mb-4">
            <strong>CSV format:</strong> Must have a column named "phone_number" or "number"<br>
            <strong>TXT format:</strong> One number per line or comma-separated
          </p>
          <%= f.submit "üìû Upload & Start Calling All", class: "bg-green-500 text-white px-6 py-3 rounded hover:bg-green-600 transition cursor-pointer" %>
        </div>
      <% end %>
    </div>
    
    <!-- Paste Numbers -->
    <div>
      <h3 class="font-semibold mb-3 text-lg">‚úçÔ∏è Paste Numbers Directly</h3>
      <%= form_with url: dashboard_paste_numbers_path, class: "space-y-4" do |f| %>
        <%= f.hidden_field :ai_prompt, id: "paste-ai-prompt" %>
        <%= f.text_area :numbers, rows: 6, class: "w-full p-3 border rounded focus:ring-2 focus:ring-purple-500 font-mono text-sm",
            placeholder: "Paste numbers here (one per line or comma-separated)\n+919876543210\n+919876543211\n+919876543212" %>
        <%= f.submit "üöÄ Start Batch Calling", class: "bg-purple-500 text-white px-6 py-3 rounded hover:bg-purple-600 transition cursor-pointer" %>
      <% end %>
    </div>
  </div>
  
  <!-- Call Log -->
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">üìä Recent Calls</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Number</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started At</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Answered</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% if @phone_numbers.any? %>
            <% @phone_numbers.each do |phone| %>
              <% phone.calls.order(created_at: :desc).each do |call| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap font-mono text-sm"><%= phone.number %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs rounded <%= status_color(call.status) %>">
                      <%= call.status %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm"><%= call.duration ? "#{call.duration}s" : "0:00" %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm"><%= call.started_at&.strftime("%Y-%m-%d %H:%M") %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= call.status == 'completed' ? "‚úÖ Yes" : "‚ùå No" %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="px-6 py-8 text-center text-gray-500">
                No calls yet. Make your first call above!
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
function makeSingleCall() {
  const number = document.getElementById('single-number').value;
  const prompt = document.getElementById('ai-prompt').value;
  
  if (!number) {
    alert('Please enter a phone number');
    return;
  }

  fetch('/dashboard/make_single_call', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
    },
    body: JSON.stringify({ number, ai_prompt: prompt })
  })
  .then(res => res.json())
  .then(data => {
    if (data.success) {
      alert('‚úÖ ' + data.message);
      location.reload();
    } else {
      alert('‚ùå Error: ' + data.error);
    }
  })
  .catch(err => {
    alert('‚ùå Request failed: ' + err.message);
  });
}

// Sync AI prompt to hidden fields
document.getElementById('ai-prompt').addEventListener('input', (e) => {
  const prompt = e.target.value;
  document.getElementById('upload-ai-prompt').value = prompt;
  document.getElementById('paste-ai-prompt').value = prompt;
});

// Initialize hidden fields
document.addEventListener('DOMContentLoaded', () => {
  const prompt = document.getElementById('ai-prompt').value;
  document.getElementById('upload-ai-prompt').value = prompt;
  document.getElementById('paste-ai-prompt').value = prompt;
});
</script>
